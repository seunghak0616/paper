# Environment Configuration
ENVIRONMENT=development  # development, staging, production

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/papers

# API Keys (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here
DBPIA_API_KEY=your-dbpia-api-key-here

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS Settings (comma-separated)
# Development
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# Production (set in production environment)
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Security
RATE_LIMIT_DEFAULT=100/minute
CORS_ALLOW_CREDENTIALS=true

# OpenAI Settings
EMBEDDING_MODEL=text-embedding-ada-002
MAX_CHUNK_SIZE=500

# File Paths
DATA_DIR=data
PDF_DIR=data/pdfs
LOGS_DIR=logs

# Optional: For production deployment
# SECRET_KEY=your-secret-key-for-sessions
# JWT_SECRET=your-jwt-secret